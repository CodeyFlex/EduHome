
@model IEnumerable<EduHome.Models.Comment>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text_primary">Comments List</h2>
        </div>
        <div class="col-6">
            Video page
        </div>
    </div>
    <br />

    @if(Model.Count() > 0) 
    { 
        <table class="table table-bordered table-striped" style=""width:100%">
            <thead>
                <tr>
                    <th>
                        Commenter
                    </th>
                    <th>
                        Comment
                    </th>
                    <th>
                        Date
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var comment in Model)
                {
                    <tr>
                        <td width="30%">@comment.Commenter</td>
                        <td width="30%">@comment.Comment_String</td>
                        <td width="30%">@comment.Comment_Date</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No comments created yet</p>
    }



</div>